{
    "title": "Map Configuration",
    "description": "A map-chart",
    "type": "object",
    "properties": {
        "settings": {
            "description": "Settings",
            "type": "object",
            "order": 8,
            "properties": {
                "title": {
                    "title": "Title",
                    "type": "string",
                    "order": 1
                },
                "subTitle": {
                    "title": "Subtitle",
                    "type": "string",
                    "order": 2
                },
                "style": {
                    "title": "Map Style",
                    "description": "The basic style of the map.",
                    "type": "string",
                    "enum": [
                        "streets-v12",
                        "outdoors-v12",
                        "light-v11",
                        "dark-v11",
                        "satellite-v9",
                        "satellite-streets-v12",
                        "navigation-day-v1",
                        "navigation-night-v1"
                    ],
                    "required": true,
                    "order": 3
                },
                "showLegend": {
                    "title": "Show Legend",
                    "type": "boolean",
                    "order": 4
                },
                "follow": {
                    "title": "Auto Follow",
                    "description": "If true, the map automatically keeps the drawn locations in focus.",
                    "type": "boolean",
                    "order": 5
                }
            }
        },
        "dataseries": {
            "title": "Dataseries",
            "order": 8,
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "label": {
                        "title": "Series Label",
                        "description": "The name for this data series",
                        "type": "string",
                        "required": true,
                        "order": 1
                    },
                    "type": {
                        "title": "Layer type",
                        "description": "Create the specified type of layer on the map.",
                        "type": "string",
                        "required": true,
                        "enum": ["circle", "symbol", "heatmap", "line"],
                        "order": 2
                    },
                    "color": {
                        "title": "Layer Base Color",
                        "type": "color",
                        "color": true,
                        "order": 3
                    },
                    "latestValues": {
                        "title": "Latest Values",
                        "description": "Restrict the number of rows for this dataseries to the given number of newest values. (If pivoted, then per each of the pivot dataseries.)",
                        "type": "number",
                        "order": 4
                    },
                    "config": {
                        "title": "Layer Configuration",
                        "type": "object",
                        "order": 5,
                        "properties": {
                            "circle": {
                                "title": "Circle Layer",
                                "type": "object",
                                "order": 1,
                                "properties": {
                                    "circle-blur": {
                                        "title": "Blur",
                                        "description": "Blur of 1 means the whole circle is blurred starting from the center point. Blur 0 means no blur effect.",
                                        "min": 0,
                                        "max": 1,
                                        "type": "number",
                                        "order": 1
                                    },
                                    "circle-opacity": {
                                        "title": "Opacity",
                                        "description": "Opactity 1 means fully opaque, 0 means fully transparent.",
                                        "min": 0,
                                        "max": 1,
                                        "type": "number",
                                        "order": 2
                                    }
                                }
                            },
                            "symbol": {
                                "title": "Symbol Layer",
                                "type": "object",
                                "order": 2,
                                "properties": {
                                    "text-color": {
                                        "title": "Text Color",
                                        "type": "color",
                                        "color": true,
                                        "order": 1
                                    },
                                    "text-size": {
                                        "title": "Text Size",
                                        "type": "number",
                                        "min": 1,
                                        "order": 2
                                    },
                                    "icon-image": {
                                        "title": "Icon Name",
                                        "description": "For available icons check the maki icon set here https://labs.mapbox.com/maki-icons/",
                                        "type": "string",
                                        "enum": ["marker", "car-front", "car-top"],
                                        "order": 3
                                    },
                                    "icon-size": {
                                        "title": "Icon size",
                                        "description": "In multiples of the original icon size",
                                        "type": "number",
                                        "min": 0,
                                        "order": 4
                                    }
                                }
                            },
                            "heatmap": {
                                "title": "Heatmap Layer",
                                "type": "object",
                                "order": 3,
                                "properties": {
                                    "heatmap-intensity": {
                                        "title": "Intensity",
                                        "description": "The higher the intensity, the more 'hot' the heatmap becomes. The value is a multiple with default value 1. e.g. to double the intensitiy choose 2.",
                                        "type": "number",
                                        "min": 0,
                                        "order": 1
                                    },
                                    "heatmap-opacity": {
                                        "title": "Opacity",
                                        "type": "number",
                                        "min": 0,
                                        "max": 1,
                                        "order": 2
                                    },
                                    "heatmap-radius": {
                                        "title": "Radius Base Size",
                                        "description": "The radius will be combined with the data value to to determine the heat radius of a point.",
                                        "type": "number",
                                        "min": 0,
                                        "order": 3
                                    }
                                }
                            },
                            "line": {
                                "title": "Track Layer",
                                "type": "object",
                                "order": 4,
                                "properties": {
                                    "line-width": {
                                        "title": "Line Width",
                                        "type": "number",
                                        "min": 1,
                                        "order": 1
                                    }
                                }
                            }
                        }
                    },
                    "data": {
                        "title": "Map data",
                        "description": "This is the map data",
                        "type": "array",
                        "order": 6,
                        "items": {
                            "type": "object",
                            "properties": {
                                "lon": {
                                    "title": "Longitude",
                                    "type": "number",
                                    "required": true,
                                    "order": 1
                                },
                                "lat": {
                                    "title": "Latitude",
                                    "type": "number",
                                    "required": true,
                                    "order": 2
                                },
                                "alt": {
                                    "title": "Altitude",
                                    "type": "number",
                                    "order": 3
                                },
                                "value": {
                                    "title": "A value for the data point",
                                    "type": "number",
                                    "order": 4
                                },
                                "pivot": {
                                    "title": "Pivot Column",
                                    "description": "You can specify a column in the input data to autogenerate dataseries for each distinct entry in this column. E.g. if you have a table with columns [city, lon, lat, temperature] and specify 'city' as pivot column, then you will get a layer for each city.",
                                    "type": "string",
                                    "order": 5
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
